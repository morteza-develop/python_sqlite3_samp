MDFloatLayout:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            id: word_label
            text_size: self.size
            halign: "center"
            valign: "middle"
            text: "Enter A name"
            font_size: 30
        
        TextInput:
            id: word_input
            multiline: False
            size_hint: (1, .5) 
        
        Button:
            size_hint: (1, .5)
            font_size: 30
            text: "Submit Name"
            on_press: app.submit()

        Button:
            size_hint: (1, .5)
            font_size: 30
            text: "Show Records"
            on_press: app.show_records()